<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/themeBlueLightest"
                android:endColor="@color/themeBlueLightest"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/themeBlueLightest" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/themeBlueLightest"
                android:startColor="@color/themeBlueLightest"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/colorAccent" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/themeBase"
                android:startColor="@color/themeBase"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/almostWhite" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>