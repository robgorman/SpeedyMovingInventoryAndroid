<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/content_new_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.ranchosoftware.speedymovinginventory.NewItemActivity"
    tools:showIn="@layout/activity_new_item"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/progressLayout">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/itemFormLayout"
        android:paddingRight="4dp"
        android:paddingLeft="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/layoutMain"
            android:layout_margin="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:text="@string/description_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/Black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:ems="10"
                    android:id="@+id/etDescription"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:layout_weight="1"
                    android:hint="Type A Description"
                    android:inputType="textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:id="@+id/categoryLayout">

                <TextView
                    android:text="@string/category_label_long"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="2"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Black"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/categorySpinner"
                    android:layout_weight="3"
                    android:minWidth="140dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:text="spacer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <CheckBox
                    android:text="@string/is_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cbIsBox"
                    android:layout_weight="1"
                    android:layout_gravity="right"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/valueLayout">

                <TextView
                    android:text="@string/value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMonetaryValue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"/>

                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:id="@+id/seekMonetaryValue"
                    android:layout_weight="3"
                    android:progress="-1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3">

                <TextView
                    android:text="@string/insurance_label_long"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Black"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/insuranceSpinner"
                    android:layout_weight="3"
                    android:minWidth="140dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:text="spacer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23"
                    android:layout_weight="2"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/padsLayout">

                <TextView
                    android:text="@string/number_of_pads"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    tools:text="@string/number_of_pads"
                    android:paddingRight="4dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNumberOfPads"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>

                <SeekBar
                    android:layout_width="0dp"
                    android:id="@+id/seekNumberOfPads"
                    android:layout_weight="3"
                    android:layout_height="40dp"
                    android:progress="-1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/weightVolumeLayout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="@string/weight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingRight="4dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/Black"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvWeight"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>

                        <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="3"
                            android:id="@+id/seekWeight"
                            android:progress="-1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:text="@string/volume_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:paddingRight="4dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/Black"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvVolume"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"/>

                        <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:id="@+id/seekVolume"
                            android:layout_weight="3"
                            android:progress="-1"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ToggleButton
                        android:text="ToggleButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/weightVolumeSyncButton"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:text="Special Handling:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@color/Black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/etSpecialHandling"
                    android:layout_marginLeft="20dp"
                    android:inputType="textCapSentences"/>
            </LinearLayout>

        </LinearLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/photoGridView"
            android:layout_below="@id/layoutMain"
            android:numColumns="3"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <TextView
            android:text="@string/no_photos_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoPhotosMessage"
            android:layout_below="@id/layoutMain"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>
