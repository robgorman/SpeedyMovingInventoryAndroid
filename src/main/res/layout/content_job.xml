<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              xmlns:autofit="http://schemas.android.com/apk/res-auto"
              android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:id="@+id/layoutEmail">

        <me.grantland.widget.AutofitTextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvEmail"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            autofit:minTextSize="3sp"
            android:autoLink="email"
            android:lines="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <me.grantland.widget.AutofitTextView
                android:text="@string/activity_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:paddingRight="4dp"
                android:gravity="right"
                autofit:minTextSize="3sp"
                android:layout_weight="1"/>

            <me.grantland.widget.AutofitTextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLifecycle"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                autofit:minTextSize="3sp"

                android:gravity="center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:id="@+id/layoutPhoneSIT">

        <me.grantland.widget.AutofitTextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tvPhone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            autofit:minTextSize="3sp"
            android:autoLink="phone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <me.grantland.widget.AutofitTextView
                android:text="SIT:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:paddingRight="4dp"
                android:gravity="right"
                android:layout_weight="1"/>

            <me.grantland.widget.AutofitTextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvStorageInTransit"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                autofit:minTextSize="3sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSchemeLightBlue"
        android:id="@+id/layoutPickupAndDelivery">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:longClickable="true"
            android:padding="8dp"
            android:paddingLeft="12dp">

            <me.grantland.widget.AutofitTextView
                android:text="@string/pick_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView44"
                android:gravity="center_horizontal"
                android:textColor="@color/Black"
                autofit:minTextSize="3sp"
                android:textStyle="normal|bold"/>

            <me.grantland.widget.AutofitTextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvPickupDate"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                autofit:minTextSize="3sp"
                android:layout_weight="1"
                android:paddingBottom="4dp"/>

            <me.grantland.widget.AutofitTextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/tvPickupAddress"
                autofit:minTextSize="3sp"
                android:autoLink="all"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:longClickable="true"
            android:padding="8dp"
            android:paddingLeft="12dp">

            <me.grantland.widget.AutofitTextView
                android:text="@string/deliver_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/textView11"
                android:gravity="center_horizontal"
                android:textColor="@color/Black"
                autofit:minTextSize="3sp"
                android:textStyle="normal|bold"/>

            <me.grantland.widget.AutofitTextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDeliveryDateWindow"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_weight="1"
                autofit:minTextSize="3sp"
                android:paddingBottom="4dp"/>

            <me.grantland.widget.AutofitTextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:id="@+id/tvDeliveryAddress"
                autofit:minTextSize="3sp"
                android:autoLink="all"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.grantland.widget.AutofitTextView
            android:text="@string/no_items_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNoItemsMessage"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            autofit:minTextSize="3sp"
            android:gravity="center_horizontal"/>

        <TabHost
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tabHost">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/itemsList"
                            android:visibility="visible"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tab4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tab5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/tab6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </TabHost>

    </RelativeLayout>

</LinearLayout>